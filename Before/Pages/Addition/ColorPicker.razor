<input type="color" @bind="@ColorCode" @oninput="OnColorChanged" />

@code {
    private string _colorCode;

    [Parameter] public EventCallback<string> OnColorSelected { get; set; }

    public string ColorCode
    {
        get => _colorCode;
        set
        {
            if (_colorCode != value)
            {
                _colorCode = value;
            }
        }
    }

    private async Task OnColorChanged(ChangeEventArgs e)
    {
        if (e.Value is string colorCode)
        {
            await OnColorSelected.InvokeAsync(colorCode);
        }
    }
}
